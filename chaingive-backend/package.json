  "name": "chaingive-backend",
  "version": "1.0.0",
  "description": "ChainGive Backend API - Microservices for peer-to-peer donation platform",
  "main": "dist/server.js",
  "scripts": {
    "dev": "ts-node-dev --respawn --transpile-only src/server.ts",
    "build": "npm run prisma:generate && tsc --skipLibCheck",
    "start": "node dist/server.js",
    "prisma:generate": "prisma generate",
    "prisma:migrate": "prisma migrate deploy",
    "prisma:migrate:dev": "prisma migrate dev",
    "prisma:studio": "prisma studio",
    "prisma:validate": "prisma validate",
    "prisma:seed": "npx tsx prisma/seed.ts",
    "db:seed": "npm run prisma:seed",
    "postinstall": "prisma generate",
    "test": "jest",
    "lint": "eslint src/**/*.ts --max-warnings=100",
    "format": "prettier --write src/**/*.ts"
  },

{
  "dashboard": {
    "id": null,
    "title": "ChainGive System Overview",
    "tags": ["chaingive", "overview"],
    "timezone": "browser",
    "panels": [
      {
        "id": 1,
        "title": "System Health Status",
        "type": "stat",
        "targets": [
          {
            "expr": "up{job=\"chaingive-backend\"}",
            "legendFormat": "Backend Status"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "mappings": [
              {
                "options": {
                  "0": {
                    "text": "DOWN",
                    "color": "red"
                  },
                  "1": {
                    "text": "UP",
                    "color": "green"
                  }
                },
                "type": "value"
              }
            ]
          }
        }
      },
      {
        "id": 2,
        "title": "CPU Usage",
        "type": "gauge",
        "targets": [
          {
            "expr": "chaingive_system_cpu_usage_percent",
            "legendFormat": "CPU Usage %"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "max": 100,
            "min": 0,
            "unit": "percent"
          }
        }
      },
      {
        "id": 3,
        "title": "Memory Usage",
        "type": "gauge",
        "targets": [
          {
            "expr": "chaingive_system_memory_usage_bytes{type=\"heap_used\"} / chaingive_system_memory_usage_bytes{type=\"heap_total\"} * 100",
            "legendFormat": "Memory Usage %"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "max": 100,
            "min": 0,
            "unit": "percent"
          }
        }
      },
      {
        "id": 4,
        "title": "Active Users (24h)",
        "type": "stat",
        "targets": [
          {
            "expr": "chaingive_active_users_total",
            "legendFormat": "Active Users"
          }
        ]
      },
      {
        "id": 5,
        "title": "WebSocket Connections",
        "type": "stat",
        "targets": [
          {
            "expr": "chaingive_websocket_connections_active",
            "legendFormat": "WebSocket Connections"
          }
        ]
      },
      {
        "id": 6,
        "title": "Database Connections",
        "type": "table",
        "targets": [
          {
            "expr": "chaingive_database_connections_total",
            "legendFormat": "{{ state }}"
          }
        ]
      },
      {
        "id": 7,
        "title": "HTTP Request Rate",
        "type": "graph",
        "targets": [
          {
            "expr": "rate(chaingive_http_requests_total[5m])",
            "legendFormat": "Requests/sec"
          }
        ]
      },
      {
        "id": 8,
        "title": "Response Time (95th percentile)",
        "type": "graph",
        "targets": [
          {
            "expr": "histogram_quantile(0.95, rate(chaingive_http_request_duration_seconds_bucket[5m]))",
            "legendFormat": "95th percentile"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "unit": "s"
          }
        }
      },
      {
        "id": 9,
        "title": "Error Rate",
        "type": "graph",
        "targets": [
          {
            "expr": "rate(chaingive_application_errors_total[5m])",
            "legendFormat": "Errors/sec"
          }
        ]
      },
      {
        "id": 10,
        "title": "External Service Health",
        "type": "table",
        "targets": [
          {
            "expr": "chaingive_external_service_health_status",
            "legendFormat": "{{ service }}"
          }
        ]
      },
      {
        "id": 11,
        "title": "Business Metrics",
        "type": "table",
        "targets": [
          {
            "expr": "chaingive_donations_total",
            "legendFormat": "{{ status }} - {{ currency }}"
          },
          {
            "expr": "chaingive_matches_created_total",
            "legendFormat": "Matches Created"
          },
          {
            "expr": "chaingive_escrow_transactions_total",
            "legendFormat": "Escrow {{ status }}"
          }
        ]
      }
    ],
    "time": {
      "from": "now-1h",
      "to": "now"
    },
    "timepicker": {},
    "templating": {
      "list": []
    },
    "annotations": {
      "list": []
    },
    "refresh": "30s",
    "schemaVersion": 27,
    "version": 0,
    "links": []
  }
}